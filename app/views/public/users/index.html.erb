<div class="container">
  <div class="row">
    <div class="col-md-3 ">
 <h2>ユーザー</h2>
       <%= image_tag @user.get_profile_image ,size:"50x50",class:"rounded-circle"%>
      <table class="table-primary">
        <tbody>
          <tr><th>名前</th></tr>
          <tr><th><%= @user.name %></th></tr>
          <tr><th>紹介文</th></tr>
          <tr><th><%= @user.introduction %><th></tr>
        </tbody>
       </table>

       <% if @user == current_user %>

      <%= link_to edit_user_path(@userid), class:"btn btn-outline-secondary btn-block" do %>
       <i class="fas fa-user-cog"></i>  <% end %>
       <% end %>


       <h2>投稿記事</h2>
        <%= form_with model: @post ,method: :post do |f| %>



        <h4>タイトル</h4>
        <%= f.text_field :title %>
       <h4>内容</h4>
        <%= f.text_area :body %>
       <%= f.submit 'Create Book' ,class: 'btn btn-success'%>

        <% end %>
 </div>
<div class="col-md-8 offset-md-1">
        <h2>各ユーザー</h2>

<%= render 'public/searches/search', user: current_user %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">image</th>
      <th scope="col">name</th>


    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <th>   <%= image_tag user.get_profile_image ,size:"50x50",class:"rounded-circle"%>  </th>

      <td><%= link_to user.name, user_path(user.id)  %></td>


    </tr>
  <% end %>

  </tbody>

</table>
<%= paginate @users %>
</div>
</div>
</div>
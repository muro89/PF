<% if @post.errors.any? %>
     <h3><%= @post.errors.count %>errors prohibited this obj from being saved:</h3>
     <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
     </ul>
    <% end %>
<div>
  <%= flash[:notice] %>
</div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 ">
   <h2>ユーザー情報</h2>

   <table>
     <tbody>
       <tr>
         <th>名前</th>
         <th><%= @user.name %></th>
       </tr>
       <tr>
         <th>自己紹介</th>
         <th><%= @user.introduction %><th>
       </tr>
       <tr>
          <%=link_to"お気に入り記事",favorites_user_path(@user) %>
       </tr>
      </tbody>
    </table>
       <%= link_to edit_user_path, class:"btn btn-outline-secondary btn-block" do %>
       <i class="fas fa-user-cog"></i>  <% end %>

    <h2>New book</h2>
        <%= form_with model: @post ,method: :post do |f| %>

    <h4>タイトル</h4>
        <%= f.text_field :title %>
    <h4>内容</h4>
        <%= f.text_area :body %>
        
        <%= f.label"タグ (,で区切ると複数,登録できます)" %>
       <%= f.text_field :names,value: @tag_list%>
       
       <%= f.submit 'Create Book' ,class: 'btn btn-success'%>
        <% end %>
        
        </div>
<div class="col-md-8 offset-md-1">
    <h2>投稿内容</h2>
     <table class="table">
      <thead>
        <tr>
           <th scope="col">タイトル</th>
           <th scope="col">内容</th>
        </tr>
      </thead>
        <tbody>
           <% @posts.each do |book| %>
         <tr>
           <th>   <%= link_to  user_path(@user.id) do %>
                 <%= image_tag @user.get_profile_image,size:"50x50" %> <% end %> </th>
             <td><%= link_to book.title, post_path(book.id)%></td>
             <td><%= book.body %></td>
             <td><%= link_to  'Destroy' , post_path(book.id),method: :delete, class: 'btn btn-danger'  %> </td> %></td>
         </tr>
           <% end %>
        </tbody>
      </table>

</div>
</div>
</div>
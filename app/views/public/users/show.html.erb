<p>show</p>

<div>
  <%= flash[:notice] %>
</div>
   <h2>ユーザー情報</h2>

   <table>
     <tbody>
       <tr>
         <th>名前</th>
         <th><%= @user.name %></th>
       </tr>
       <tr>
         <th>自己紹介</th>
         <th><%= @user.introduction %><th>
       </tr>
      </tbody>
    </table>
       <%= link_to edit_user_path, class:"btn btn-outline-secondary btn-block" do %>
       <i class="fas fa-user-cog"></i>  <% end %>

    <h2>New book</h2>
        <%= form_with model: @post ,method: :post do |f| %>

    <h4>タイトル</h4>
        <%= f.text_field :title %>
    <h4>内容</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' ,class: 'btn btn-success'%>
        <% end %>
    <h2>投稿内容</h2>
     <table class="table">
      <thead>
        <tr>
           <th scope="col">タイトル</th>
           <th scope="col">内容</th>
        </tr>
      </thead>
        <tbody>
           <% @posts.each do |book| %>
         <tr>
           <th>   <%= link_to  user_path(@user.id) do %>
                 <%= image_tag @user.get_profile_image(100,100) %> <% end %> </th>
             <td><%= link_to book.title, post_path(book.id)%></td>
             <td><%= book.body %></td>
         </tr>
           <% end %>
        </tbody>
      </table>


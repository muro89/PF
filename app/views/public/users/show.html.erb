<% if @post.errors.any? %>
     <h3><%= @post.errors.count %>errors prohibited this obj from being saved:</h3>
     <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
     </ul>
    <% end %>
<div>
  <%= flash[:notice] %>
</div>
<div class="container px-5 px-sm-0　">
  <div class="row">
    <div class="col-md-3 ">


  <div class="card" style="width:15rem;">
  <%= image_tag @user.get_profile_image ,size:"230x150",class:"rounded-circle"%>
  <div class="card-body">
    <h5 class="card-title"><%=@user.name %></h5><br>
    <h6 class="card-subtitle text-muted">自己紹介 </h6>
    <p class="card-text"><%= @user.introduction %></p>
    <% if @user == current_user %>
    <%= link_to edit_user_path, class:"btn btn-outline-secondary btn-block" do %>
       <i class="fas fa-user-cog"></i>  <% end %>
       <% end %>
  </div>
</div>
<p class="text-center"><%=link_to"お気に入り記事",favorites_user_path(@user) %></p>

       <h6 class="text-center">投稿</h6>
        <%= form_with model: @post ,method: :post do |f| %>

    <h6>タイトル</h6>
        <%= f.text_field :title %>
    <h6>内容</h6>
        <%= f.text_area :body  , size:"23*20" %>

       <h6> タグ <br>(,で区切ると複数,登録できます)</h6>
       <%= f.text_field :name,value: @tag_list%>

       <%= f.submit 'Create Book' ,class: 'btn btn-success'%>
        <% end %>

        </div>
<div class="col-md-8 offset-md-1">
    <h2>投稿内容</h2>
     <table class="table">
      <thead>
        <tr>
           <th scope="col">タイトル</th>
           <th scope="col">内容</th>
        </tr>
      </thead>
        <tbody>
           <% @posts.each do |book| %>
         <tr>
           <th>   <%= link_to  user_path(@user.id) do %>
                 <%= image_tag @user.get_profile_image,size:"50x50" %> <% end %> </th>
             <td><%= link_to book.title, post_path(book.id)%></td>
             <td><%= book.body %></td>
             <td><%= link_to  'Destroy' , post_path(book.id),method: :delete, class: 'btn btn-danger'  %> </td> %></td>
         </tr>
           <% end %>
        </tbody>
      </table>

</div>
</div>
</div>
<% if @user.errors.any? %>
<h3> <%= @user.errors.count %> error prohibited this obj from </br>being saved:</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

 <div class="d-flex justify-content-center">
<%= form_with model: @user do |f| %>
  <label><%= @user.name %>さんの情報 </label><br>
  <label for="inputName">名前</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
  <label for="inputImage">画像</label><br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
  <label for="inputIntroduction">自己紹介</label><br>
  <%= f.text_area :introduction %><br>
 <%= link_to "退会する", unsubscribe_path, class: "btn", :style=>"color:#c70067; background-color:#ffb6c1;" %>
  <%= f.submit '更新' ,class: 'btn btn-outline-success offset-1 btn-lg mt-1'%>
<% end %>
</div>
     <h2>User info</h2>

      <table>
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @post.user.name%></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @post.user.introduction %><th>
          </tr>
        </tbody>
      </table>



      <%= link_to edit_user_path(@post.user.id),  class:"btn btn-outline-secondary btn-block" do %>
       <i class="fas fa-user-cog"></i>  <% end %>


       <h2>New book</h2>
           <%= form_with model: @post ,method: :post do |f| %>
       <h4>Title</h4>
           <%= f.text_field :title %>
       <h4>Opinion</h4>
           <%= f.text_area :body %>
           <%= f.submit 'Create Book' ,class: 'btn btn-success' %>
           <% end %>

       <h2>Book detail</h2>
    <table class="table">
     <tbody>
        <td>
            <%= link_to @post.user.name, user_path(@post.user.id) %></td>
        <td><%= link_to @post.title, post_path(@post.id) %></td>
        <td><%= @post.body %></td>
            <% if @post.user == current_user %>
        <td><%= link_to  'Edit' , edit_post_path, class: 'btn btn-success'  %> </td>
        <td><%= link_to  'Destroy' , post_path(@post.id),method: :delete, class: 'btn btn-danger'  %> </td>
            <% end %>
      </tbody>
    </table>
      <div id="comments_area">
       <%= render 'public/post_comments/comment', post:@post%>
         </div>

      <div class="new-comment">

        <%= render 'public/post_comments/post_comment' , post:@post, post_comment:@post_comment %>
   </div>
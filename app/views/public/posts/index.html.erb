<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 ">
      <%= render 'public/users/info', user: @user %>
      <p class="text-center"><%=link_to"お気に入り記事",favorites_user_path(@user) %></p>
      <%= render 'public/posts/form',post: @post,tag_list: @tag_list%>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2 class="text-center">投稿記事</h2>
      <table class="table">
       <thead>
         <tr>
           <th scope="col">image</th>
           <th scope="col">Title</th>
           <th scope="col">Opinion</th>
         </tr>
       </thead>
       <tbody>
         <% @posts.each do |post| %>
         <tr>
           <td>   <%= link_to user_path(post.user.id) do %>
                  <%= image_tag post.user.get_profile_image, size:"50x50" %> <%end %> </td>
           <td>   <%= link_to post.title, post_path(post.id)%></td>
           <td>   <%= post.body %></td>
           <td id="favorite_buttons_<%= post.id %>">
                 <%= render "public/favorites/favorite",post:post %> </td>
         </tr>
         <% end %>
        </tbody>
      </table>
      <%= paginate @posts %>

        <h2>7日間分の投稿数</h2>
   <table class="table">
   <thead>
    <tr>
     <th>６日前</th>
     <th>5日前</th>
     <th>4日前</th>
     <th>3日前</th>
     <th>２日前</th>
     <th>昨日</th>
     <th>今日</th>
    </tr>
   </thead>
   <tbody>
    <tr>
     <th><%= @posts.created_6days_ago.count %></th>
     <th><%= @posts.created_5days_ago.count %></th>
     <th><%= @posts.created_4days_ago.count %></th>
     <th><%= @posts.created_3days_ago.count %></th>
     <th><%= @posts.created_2days_ago.count %></th>
     <th><%= @posts.created_yesterday.count %></th>
     <th><%= @posts.created_today.count %></th>
    </tr>
   </tbody>
  </table>


     <div>
      <% @tag_list.each do |list|%>
      <%=link_to list.name,search_tag_path(tag_id: list.id) %>
      <%="(#{list.posts.count})" %><% end %>
     </div>
    </div>
  </div>
</div>

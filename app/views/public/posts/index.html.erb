<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 ">
<h2>User info</h2>

    <div class="card" style="width:15rem;">
  <%= image_tag @user.get_profile_image ,size:"230x150",class:"rounded-circle"%>
  <div class="card-body">
    <h5 class="card-title"><%=@user.name %></h5><br>
    <h6 class="card-subtitle text-muted">自己紹介 </h6>
    <p class="card-text"><%= @user.introduction %></p>
    <% if @user == current_user %>
    <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
       <i class="fas fa-user-cog"></i>  <% end %>
       <% end %>
  </div>
</div>
<p class="text-center"><%=link_to"お気に入り記事",favorites_user_path(@user) %></p>

       <h6 class="text-center">投稿</h6>
        <%= form_with model: @post ,method: :post do |f| %>

    <h6>タイトル</h6>
        <%= f.text_field :title %>
    <h6>内容</h6>
        <%= f.text_area :body  , size:"23*20" %>

       <h6> タグ <br>(,で区切ると複数,登録できます)</h6>
       <%= f.text_field :name,value: @tag_list%>

       <%= f.submit 'Create Book' ,class: 'btn btn-success'%>
        <% end %>

        </div>
<div class="col-md-8 offset-md-1">

<%= render 'public/searches/search', user: current_user %>
<h2>Books</h2>
<table class="table">
  <thead>
    <tr>
        <th scope="col">image</th>
      <th scope="col">Title</th>
      <th scope="col">Opinion</th>



    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td>   <%= link_to user_path(post.user.id) do %>
             <%= image_tag post.user.get_profile_image, size:"50x50" %> <%end %> </td>
      <td><%= link_to post.title, post_path(post.id)%></td>
      <td><%= post.body %></td>

      <td id="favorite_buttons_<%= post.id %>">
         <%= render "public/favorites/favorite",post:post %>
      </td>




    </tr>
    <% end %>

  </tbody>
</table>

<% @tag_list.each do |list|%>
<%=link_to list.name,search_tag_path(tag_id: list.id) %>
<%="(#{list.posts.count})" %><% end %>

</div>
</div>
</div>

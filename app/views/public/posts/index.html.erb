<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 ">
      <%= render 'public/users/info', user: @user %>
      <p class="text-center"><%=link_to"お気に入り記事",favorites_user_path(@user) %></p>
      <%= render 'public/posts/form',post: @post,tag_list: @tag_list%><br><br>

           <h4 class="text-center">投稿数</h4>
   <div class = "table_width">
   <table class="table table-bordered">
   <thead>
    <tr>
     <th>６日前</th>
     <th>5日前</th>
     <th>4日前</th>
     <th>3日前</th>
     <th>２日前</th>
     <th>昨日</th>
     <th>今日</th>
    </tr>
   </thead>
   <tbody>
    <tr>
     <th><%= @posts.created_6days_ago.count %></th>
     <th><%= @posts.created_5days_ago.count %></th>
     <th><%= @posts.created_4days_ago.count %></th>
     <th><%= @posts.created_3days_ago.count %></th>
     <th><%= @posts.created_2days_ago.count %></th>
     <th><%= @posts.created_yesterday.count %></th>
     <th><%= @posts.created_today.count %></th>
    </tr>
   </tbody>
  </table>
  </div>
   <div>
      <table class="table">
        <thred>
          <tr>
            <th>
              <%= "タグ"%>
            </th>
          </tr>
        </thred>
        <% @tag_list.each do |list|%>
        <tbody>
          <tr>
            <td>     <%=link_to list.name,search_tag_path(tag_id: list.id) %>
                    <%="(#{list.posts.count})" %>
            </td>
          </tr>
          </tbody>
          <% end %>
      </table>
       <%= paginate @tag_list %>

     </div>
    </div>

  <div class="col-md-8 offset-md-1">

      <h2 class="text-center">投稿記事</h2>
       <% @posts.each do |post| %>
   <div class="card  border-primary mb-3 ">

      <div class="row g-0">
        <div class="col-md-4">
           <%= link_to post_path(post.id) do %>
          <%= image_tag post.get_image ,size:"200x200"%>
        <% end %>

        </div>
        <div class="col-md-8">
         <div class="card-body">
          <div class="col-8">

              <%= image_tag post.user.get_profile_image, size:"30x30", class:"mt-3 rounded-circle"; %>



          </div>
          <div class="col-10 md-2">
              <p class="card-title">

                <%= link_to(post_path(post.id), class:"text-dark") do %>
                  <strong><i class="far fa-flag"></i><span> <%= post.title %></span></strong>
                <% end %>
                </p>

                <p class="card-text"><%= post.body %></p>

                <div id="favorite_buttons_<%= post.id %>">
                   <%= render "public/favorites/favorite",post:post %>
                </div>
          </div>
         </div>
        </div>
      </div>
    </div>
    <% end %>
      <%= paginate @posts %>
  </div>
 </div>
</div>
